<%- include("./include/_header") %>

<main id="site-main">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto">

        <div class="button-box">
          <a href="/contacts" class="btn btn-light">
            <i class="fa-solid fa-list"></i> 연락처 목록
          </a>
        </div>

        <h2 class="text-center my-4">연락처 추가</h2>
        <p class="text-center text-muted mb-4">연락처 정보를 추가합니다.</p>

        <form action="/contacts/add" method="POST" id="add-user">
          <div class="user-info">

            <div class="mb-3">
              <label for="name" class="form-label">이름(Full Name)</label>
              <input type="text" class="form-control" name="name" id="name" placeholder="홍길동">
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">메일 주소(E-mail)</label>
              <input type="text" class="form-control" name="email" id="email" placeholder="hong@abc.def">
            </div>

            <div class="mb-4">
              <label for="phone" class="form-label">전화번호(Mobile)</label>
              <input type="text" class="form-control" name="phone" id="phone" placeholder="123-4567-8901">
            </div>

            <button type="submit" class="btn btn-dark w-100">저장하기</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</main>

<%- include("./include/_footer") %>
